<main>
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Course</h1>
            <form method="POST">
                <label>Title:</label>
                <input name="title" type="text" id="title" value="{{title}}">

                <label>Type:</label>
                <input name="courseType" type="text" id="type" value="{{courseType}}">

                <label>Certificate:</label>
                <input name="certificate" type="text" id="certificate" value="{{certificate}}">

                <label>Image:</label>
                <input name="courseImage" type="text" id="image" placeholder="http://..." value="{{courseImage}}">

                <label>Description:</label>
                <textarea id="content" name="description">{{description}}</textarea>

                <label>Price:</label>
                <input name="price" type="number" id="price" value="{{price}}">

                <input type="submit" id="btn" value="Create">
            </form>
        </div>
    </section>
</main>